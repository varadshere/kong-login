
// preset form values if we receive a userdata object //
- user = typeof(udata) != 'undefined' ? udata : { }
// store the userId on the client side in a hidden input field //
input(type='hidden', value= user._id)#userId

#account-form-container.center-vertical
	form(method="post")#account-form.form-horizontal.well
		h2
		h6#sub1 Please tell us a little about yourself.
		hr
		.form-group
			label.control-label.col-sm-3 Name
			.col-sm-9
				input.form-control#name-tf(type='text', name='name', value= user.name)

		.form-group
			label.control-label.col-sm-3 Email
			.col-sm-9
				input.form-control#email-tf(type='text', name='email', value= user.email)

		.form-group
			label.control-label.col-sm-3 Location
			.col-sm-9
				select.form-control#country-list(name='country')
					each item in countries
						option(selected=item.name == user.country)= item.name
		hr
		h6#sub2
		.form-group
			label.control-label.col-sm-3 Username
			.col-sm-9
				input.form-control#user-tf(type='text', name='user', value= user.user).disabled

		.form-group
			label.control-label.col-sm-3 Password
			.col-sm-9
				input.form-control#pass-tf(type='password', name='pass', value='')
		hr
		h6#sub3
		.form-group
			label.control-label.col-sm-3 App Name
			.col-sm-9
				input.form-control#appName-tf(type='text', name='appName', value=user.appName)

		.form-group#custom_id-form
			label.control-label.col-sm-3 custom_id
			.col-sm-9
				input.form-control#custom_id-tf(type='text', name='custom_id', value=user.custom_id)

		.form-group#client_id-form
			label.control-label.col-sm-3 client_id
			.col-sm-9
				input.form-control#client_id-tf(type='text', name='client_id', value=user.client_id)

		.form-group#client_secret-form
			label.control-label.col-sm-3 client_secret
			.col-sm-9
				input.form-control#client_secret-tf(type='text', name='client_secret', value=user.client_secret)

		.form-group#token-type-form
			label.control-label.col-sm-3 token_type
			.col-sm-9
				input.form-control#token_type-tf(type='text', name='token_type', value=user.token_type)

		.form-group#access_token-form
			label.control-label.col-sm-3 access_token
			.col-sm-9
				input.form-control#access_token-tf(type='text', name='access_token', value=user.access_token)

		hr
		.form-buttons
			button(type='button')#account-form-btn1.btn.btn-default
			button(type='submit')#account-form-btn2.btn.btn-primary
		.clearfix

// display form errors in a custom modal window //

include modals/form-errors
